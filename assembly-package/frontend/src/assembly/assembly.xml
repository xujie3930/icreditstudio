<assembly>
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>


        <fileSet>
            <directory>
                ${project.parent.basedir}/../icreditstudio-frontend/target/jnh-datasphere-icreditstudio-frontend-${project.version}-dist
            </directory>
            <outputDirectory/>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

    </fileSets>


    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <useStrictFiltering>true</useStrictFiltering>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>

</assembly>
