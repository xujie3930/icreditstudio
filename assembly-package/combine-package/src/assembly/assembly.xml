<assembly>
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>

        <!-- bin -->
        <fileSet>
            <directory>
                ${project.basedir}/bin/
            </directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- sbin -->
        <fileSet>
            <directory>
                ${project.basedir}/sbin/
            </directory>
            <outputDirectory>sbin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- backend service -->
        <fileSet>
            <directory>
                ${project.parent.basedir}/backend-microservices/target/jnh-datasphere-icreditstudio-services-${project.version}-bin
            </directory>
            <outputDirectory>jnh-datasphere-icreditstudio-services-bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- scheduler -->
        <fileSet>
            <directory>
                ${project.parent.basedir}/scheduler/target/jnh-datasphere-icreditstudio-scheduler-${project.version}-bin
            </directory>
            <outputDirectory>jnh-datasphere-icreditstudio-scheduler-bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- frontend -->
        <fileSet>
            <directory>
                ${project.parent.basedir}/frontend/target/jnh-datasphere-icreditstudio-frontend-${project.version}-bin
            </directory>
            <outputDirectory>jnh-datasphere-icreditstudio-frontend-bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

    </fileSets>


</assembly>
